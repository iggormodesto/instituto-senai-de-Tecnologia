<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.4.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_4_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.4.0+</version>
	</compatibility>
	<theme id="instituto-senai-lf7_4" name="Instituto SENAI de Tecnologia">
		<template-extension>ftl</template-extension>
		
		<settings>
			<setting configurable="true" key="wrap-widget-page-content" type="checkbox" value="true" />
			<setting configurable="true" key="facebook-url" type="text" value="https://www.facebook.com/senainacional" />
			<setting configurable="true" key="x-twitter-url" type="text" value="https://x.com/senainacional" />
			<setting configurable="true" key="youtube-url" type="text" value="https://www.youtube.com/senaibr" />
			<setting configurable="true" key="POLÍTICA DE PRIVACIDADE URL" type="text" value="/politica-de-privacidade" />
		</settings>
		
		<roles>
			<role-name>User</role-name>
		</roles>
		<portlet-decorator id="barebone" name="Com Título">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-barebone</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Sem Borda">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorada">
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
